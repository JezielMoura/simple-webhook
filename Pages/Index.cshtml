@page
@model IndexModel
@{
    ViewData["Title"] = "Webhook Receiver";
}

<div class="container">
    <div class="text-center mb-4">
        <h1>Webhook Dashboard</h1>
        <form method="post" class="d-inline">
            <button type="submit" class="btn btn-primary">Create New Webhook</button>
        </form>
    </div>

    @if (Model.HookIds.Count == 0)
    {
        <div class="text-center py-5">
            <h3>No webhooks yet</h3>
            <p>Create one above to start receiving requests.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var id in Model.HookIds)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@id</h5>
                            <code class="url">@Request.Scheme://@Request.Host/hook/@id</code>
                            <p class="mt-3">
                                <a href="/view/@id" class="btn btn-primary btn-sm">View Requests</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <p class="text-center text-muted mt-4">All webhooks and requests are stored in-memory (lost on restart).</p>
</div>
