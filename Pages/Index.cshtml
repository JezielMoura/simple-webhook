@page
@model IndexModel
@{
    ViewData["Title"] = "Webhook Site";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">Webhook Site</h1>
        <p class="lead">Create a unique webhook URL to receive and inspect HTTP requests</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <form method="post" asp-page-handler="CreateWebhook">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-plus-circle"></i> Create New Webhook URL
                </button>
            </form>
        </div>
    </div>

    @if (Model.WebhookId != null)
    {
        <div class="row mb-4">
            <div class="col-md-8 offset-md-2">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Your Webhook URL</h5>
                    </div>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control"
                                   value="@(Request.Scheme + "://" + Request.Host + "/webhook/" + Model.WebhookId)"
                                   readonly id="webhookUrl">
                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">
                                <i class="bi bi-clipboard"></i> Copy
                            </button>
                        </div>
                        <div class="mt-3">
                            <a asp-page="/Webhook" asp-route-id="@Model.WebhookId" class="btn btn-info">
                                <i class="bi bi-eye"></i> View Requests
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.AllWebhooks.Any())
    {
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Active Webhooks</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var webhook in Model.AllWebhooks)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <code>@(Request.Scheme + "://" + Request.Host + "/webhook/" + webhook)</code>
                                        <div class="small text-muted">Created webhook</div>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <a asp-page="/Webhook" asp-route-id="@webhook" class="btn btn-sm btn-info">View</a>
                                        <form method="post" asp-page-handler="DeleteWebhook" class="d-inline">
                                            <input type="hidden" name="id" value="@webhook" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this webhook?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            var copyText = document.getElementById("webhookUrl");
            copyText.select();
            copyText.setSelectionRange(0, 99999); // For mobile devices
            navigator.clipboard.writeText(copyText.value);

            // Change button text temporarily
            var button = event.target.closest('button');
            var originalText = button.innerHTML;
            button.innerHTML = '<i class="bi bi-check"></i> Copied!';
            setTimeout(() => {
                button.innerHTML = originalText;
            }, 2000);
        }
    </script>
}

