@page
@model IndexModel
@{
    ViewData["Title"] = "Webhook Receiver";
}

<div class="container">
    <h1 class="text-center">Your Webhook URL</h1>
    <div class="card">
        <div class="card-body text-center">
            <p class="lead">Send requests to:</p>
            <code class="url">@Request.Scheme://@Request.Host/hook/@Model.HookId</code>
            <p class="mt-3"><a href="/view/@Model.HookId" class="btn btn-primary">View Requests</a></p>
        </div>
    </div>
    <p class="text-center text-muted mt-4">This URL is unique for this session. Requests are stored in-memory.</p>
</div>
