<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webhook Receiver</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Webhook Receiver</h1>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer>
        <p>&copy; 2025 - Webhook Receiver. Requests stored in-memory (lost on restart).</p>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
