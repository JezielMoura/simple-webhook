{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/Infrastructure/bin/Debug/net10.0/SimpleWebhook.Infrastructure.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Infrastructure",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5000"
            },
            "stopAtEntry": false
        },
        {
            "name": "spa",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/src/Presentation",
            "runtimeArgs": [ "run-script", "dev" ],
            "runtimeExecutable": "npm",
            "serverReadyAction": {
                "action": "debugWithChrome",
                "webRoot": "${workspaceFolder}/src/Presentation",
                "pattern": "Now listening",
                "uriFormat": "https://localhost:3000",
                "killOnServerStop": true
            },
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
          "name": "launch",
          "configurations": ["api", "spa"],
          "stopAll": true
        }
    ]
}
