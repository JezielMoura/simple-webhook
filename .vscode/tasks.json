{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [ "build", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary" ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/Infrastructure"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [ "watch", "--no-hot-reload", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary" ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/Infrastructure"
            }
        },
        {
            "label": "start",
            "command": "npm",
            "type": "process",
            "args": [ "run", "dev"],
            "problemMatcher":"$node-sass",
            "options": {
                "cwd": "${workspaceFolder}/src/Presentation"
            }
        },
        {
            "label": "launch",
            "problemMatcher": "$msCompile",
            "dependsOn": ["start", "watch"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
