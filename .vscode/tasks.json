{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "watch",
			"type": "shell",
			"command": "dotnet",
			"args": [ "watch", "--project", "${workspaceFolder}", "--environment", "Development" ],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$msCompile"	
			],
			"isBackground": false
		}
	]
}
